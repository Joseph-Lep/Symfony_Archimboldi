{% extends 'base.html.twig' %}

{% block title %}
    Bouquins par {{ medium.name }}
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Bouquins par {{ medium.name }}</h1>
        
        {% if books|length > 0 %}
            <ul class="list-group">
                {% for book in books %}
                    <div class="row mt-2">
            <div class="col-md-4">
                <img src="{{book.cover}}" class="img-fluid" alt="couv">
            </div>
            <div class="col-md-8">
                 <a href="{{ path('book_list', { 'id': book.id }) }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                <h2 class="mb-1">Titre : {{ book.title }}</h2>
            </a>
                <p class="text-bold">Auteur.ice : {{book.author}}
                 <p class="text-bold">Edition : {{book.publisher}}
                <div class="d-flex align-items-center">
                    <div class="badge bg-success me-2">8</div>
                    <p class="mb-0">Note moyenne</p>
                </div>
                <p class="mt-3">
                    Résumé : {{book.backcover}}
                </p>
                <button class="btn btn-primary">En faire une critique</button>
            </div>
        </div>
                {% endfor %}
            </ul>
        {% else %}
            <p class="alert alert-warning">Aucun livre trouvé pour ce médium.</p>
        {% endif %}
    </div>
{% endblock %}