{% extends 'base.html.twig' %}

{% block title %}Les derniers bouquins
{% endblock %}
{% block body %}
<div class="container-fluid">
  <div class="px-lg-5">

    <div class="row py-5">
      <div class="col-lg-12 mx-auto">
        <div class="text-white p-5 shadow-sm rounded banner">
          <h1 class="display-4">Bouquins</h1>
          <p class="lead">Les bouquins</p>
          <p class="lead"><a class="text-reset" href="#">Retrouvez les derni√®res critiques</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container mt-5">
    <div class="row">
        {% for book in books %}
            <div class="col-md-6 col-lg-4 mb-4 d-flex">
                <div class="bg-white rounded shadow-sm w-100">
                    <a class="hover:underline" href="{{ path('book_list', { id: book.id }) }}"> 
                        <img src="{{book.cover}}" alt="couverture du livre" class="img-fluid card-img-top">
                    </a>
                    <div class="p-4">
                        <h5> 
                            <a href="{{ path('book_list', { id: book.id }) }}" class="text-dark text-justify">
                                Titre : {{book.title}}
                            </a>
                        </h5>
                        <div class="d-flex align-items-center justify-content-between rounded-pill bg-light px-3 py-2 mt-4">
                            <p class="small mb-0 text-justify">
                                <i class="fa fa-picture-o mr-2"></i>
                                <span class="font-weight-bold text-nowrap">&#x1F58D Auteur.ice : {{book.author}}</span>
                            </p>
                        </div>
                          <div class="d-flex align-items-center justify-content-between rounded-pill bg-light px-3 py-2 mt-4">
                            <p class="small mb-0 text-justify">
                                <i class="fa fa-picture-o mr-2"></i>
                             <span class="font-weight-bold text-nowrap">&#x1F4D7 Edition : {{book.publisher}}</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

      {% endblock %}

