{% extends 'base.html.twig' %}

{% block title %}Critic index{% endblock %}

{% block body %}
    <h1>Critic index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Date_of_creation</th>
                <th>Date_of_last_update</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for critic in critics %}
            <tr>
                <td>{{ critic.id }}</td>
                <td>{{ critic.title }}</td>
                <td>{{ critic.content }}</td>
                <td>{{ critic.dateOfCreation ? critic.dateOfCreation|date('Y-m-d') : '' }}</td>
                <td>{{ critic.dateOfLastUpdate }}</td>
                <td>
                    <a href="{{ path('app_critic_crud_show', {'id': critic.id}) }}">show</a>
                    <a href="{{ path('app_critic_crud_edit', {'id': critic.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_critic_crud_new') }}">Create new</a>
{% endblock %}
