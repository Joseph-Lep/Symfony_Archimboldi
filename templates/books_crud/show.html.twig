{% extends 'base.html.twig' %}

{% block title %}Books{% endblock %}

{% block body %}
    <h1>Books</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <th>Publisher</th>
                <td>{{ book.publisher }}</td>
            </tr>
            <tr>
                <th>Date_of_first_publish</th>
                <td>{{ book.dateOfFirstPublish ? book.dateOfFirstPublish|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ISBN</th>
                <td>{{ book.ISBN }}</td>
            </tr>
            <tr>
                <th>Serial</th>
                <td>{{ book.serial }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td>{{ book.cover }}</td>
            </tr>
            <tr>
                <th>Backcover</th>
                <td>{{ book.backcover }}</td>
            </tr>
            <tr>
                <th>Nbr_of_pages</th>
                <td>{{ book.nbrOfPages }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_books_crud_index') }}">back to list</a>

    <a href="{{ path('app_books_crud_edit', {'id': book.id}) }}">edit</a>

    {{ include('books_crud/_delete_form.html.twig') }}
{% endblock %}
